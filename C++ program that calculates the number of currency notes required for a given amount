#include<iostream>
using namespace std;

int main()
{
    int amount;

    int note1=0, note2=0, note5=0, note10=0, note20=0, note50=0, note100=0, note500=0;
    cout << "Enter amount: "<<endl;
    cin >> amount;

    cout << "Total number of notes" <<endl;

    if(amount >= 500)
    {
        note500 = amount/500;
        amount = amount - ( note500 * 500);
     cout << "500 = " << note500 <<endl;
    }
    if(amount >= 100)
    {
        note100 = amount/100;
        amount = amount - (  note100 * 100);
     cout << "100 = " << note100 <<endl;
    }
    if(amount >= 50)
    {
        note50 = amount/50;
        amount = amount - (  note50 * 50);
     cout << "50 = " << note50 <<endl;
    }
    if(amount >= 20)
    {
        note20 = amount/20;
        amount = amount - (  note20 * 20);
     cout << "20 = " << note20 <<endl;
    }
    if(amount >= 10)
    {
        note10 = amount/10;
        amount = amount - (  note10 * 10);
     cout << "10 = " << note10 <<endl;
    }
    if(amount >= 5)
    {
        note5 = amount/5;
        amount = amount - (  note5 * 5);
    cout << "5 = " << note5 <<endl;
    }
    if(amount >= 2)
    {
        note2 = amount /2;
        amount = amount - (  note2 * 2);
     cout << "2 = " << note2 <<endl;
    }
    if(amount >= 1)
    {
        note1 = amount;
     cout << "1 = " << note1 <<endl;
    }

    return 0;

}
